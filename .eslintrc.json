{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:promise/recommended",
        "plugin:eqeqeq-fix/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": [2],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"]
        // "no-console":"error"
    },
    "settings": {
        "react": {
         "version": "detect"
        }
      }
}